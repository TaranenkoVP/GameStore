<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

<div class="navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        </div>

        <div class="container">
            <div class="row game-main-head">
                <div class="col-xs-6 col-md-5 col-lg-4">
                    <div class="">
                        <img src="/Content/Images/MainIcon.png" alt="" class="img-responsive game-main-icon">
                    </div>
                </div>
                <div class="col-xs-6 col-md-7 col-lg-8">
                    <div class="btn-toolbar pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-warning">
                                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Log In
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-warning">
                                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Log Out
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container game-main-head game-relative">
            <div class="btn-default game-main-pills">
                <ul class="nav nav-pills">
                    <li role="presentation" class="game-main-pill game-main-pill-first">
                        @Html.ActionLink("Home", "Index", "Home", null, new {@class = "game-main-pill-color"})
                    </li>
                    <li role="presentation" class="game-main-pill">
                        @Html.ActionLink("Games", "Index", "Game", null, new {@class = "game-main-pill-color"})
                    </li>
                    <li role="presentation" class="game-main-pill">
                        <a href="#" style="color: orange">Genres</a>
                    </li>
                    <li role="presentation" class="game-main-pill">
                        <a href="#" style="color: orange">Publishers</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li role="presentation" class="game-main-pill">
                            <a href="#" style="color: orange">Orders</a>
                        </li>
                    }
                    <li role="presentation" class="game-main-pill">
                        <a href="#" style="color: orange">My bucket</a>
                    </li>
                </ul>
            </div>

            <div>
                <img src="/Content/Images/MainBody.jpg" alt="" class="game-main-body">
            </div>
        </div>

    </div>

</div>

<div class="container body-content game-relative-static">
    @RenderBody()
    @*<hr />*@
    <footer>
        @* <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
    </footer>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>